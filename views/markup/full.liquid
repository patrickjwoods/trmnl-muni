<style>
  .muni { font-family: "Helvetica Neue", Helvetica, Arial, sans-serif; }
</style>
<div class="layout layout--col muni">
  <div class="columns">
    <div class="column">
      <div class="title_bar">
        <img class="image" src="https://usetrmnl.com/images/plugins/trmnl--render.svg" />
        <span class="title">SF Muni</span>
        <span class="instance">{{ updated_at }}</span>
      </div>
      <table class="table table--gap-s">
        <thead>
          <tr>
            <th>Line</th>
            <th>Destination</th>
            <th>Next Departures</th>
          </tr>
        </thead>
        <tbody>
          {% for stop in stops %}
            <tr>
              <td colspan="3" style="padding-top: 8px; font-weight: bold; font-size: 1.1em;">{{ stop.stop_name }}</td>
            </tr>
            {% for line in stop.lines %}
            <tr>
              <td class="bold">{{ line.line }}</td>
              <td>{{ line.destination }}</td>
              <td>
                {% if line.departures.size > 0 %}
                  {% for dep in line.departures %}{{ dep.time }}{% unless forloop.last %}, {% endunless %}{% endfor %}
                {% else %}
                  --
                {% endif %}
              </td>
            </tr>
            {% endfor %}
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
