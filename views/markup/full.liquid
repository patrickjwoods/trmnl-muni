<div class="layout layout--col">
  <div class="columns">
    <div class="column">
      <div class="title_bar">
        <img class="image" src="https://usetrmnl.com/images/plugins/trmnl--render.svg" />
        <span class="title">SF Muni</span>
        <span class="instance">{{ updated_at }}</span>
      </div>
      <table class="table table--gap-s">
        <thead>
          <tr>
            <th>Route</th>
            <th>Direction</th>
            <th>Next Departures</th>
          </tr>
        </thead>
        <tbody>
          {% for route in routes %}
          <tr>
            <td class="bold">{{ route.route }}</td>
            <td>{{ route.direction }}</td>
            <td>
              {% if route.departures.size > 0 %}
                {% for dep in route.departures %}{{ dep.minutes }}m{% unless forloop.last %}, {% endunless %}{% endfor %}
              {% else %}
                --
              {% endif %}
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
